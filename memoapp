# Memo App - Nginx configuration for production
# Frontend: proxied from port 5173 (or serve static build)
# Backend API: proxied from port 8002
# Default server so Memo (not cortex) is served at the host IP. Keep acknowledge + simplii enabled; disable rift_cortex.

upstream memoapp_frontend {
    server 127.0.0.1:5173;
    keepalive 32;
}

upstream memoapp_backend {
    server 127.0.0.1:8002;
    keepalive 32;
}

# HTTP server â€“ default_server so this app handles requests to the host IP (e.g. 43.205.135.78)
# If another app (e.g. squadmode-ai) was serving before, disable it: sudo rm /etc/nginx/sites-enabled/<other-site>
server {
    server_name ext.makememo.ai;

    # For Let's Encrypt / certbot
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
        allow all;
    }

    # Backend API - proxy to port 8002
    location /api/ {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    location /token {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Content-Type "application/x-www-form-urlencoded";
    }

    location /users {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /health {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /healthcheck {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /dashboards {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /charts {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /filters {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /generate_chart {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 120s;
        proxy_send_timeout 120s;
    }

    location /docs {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /redoc {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /openapi.json {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /auth_callback.html {
        proxy_pass http://memoapp_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # Frontend - Memo App at / (Vite dev or preview on 5173)
    location / {
        proxy_pass http://memoapp_frontend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_cache_bypass $http_upgrade;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ext.makememo.ai/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ext.makememo.ai/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

# Optional: HTTPS server (uncomment and set ssl_certificate after obtaining certs)
# server {
#     listen 443 ssl http2;
#     listen [::]:443 ssl http2;
#     server_name your-domain.com;
#
#     ssl_certificate     /etc/letsencrypt/live/your-domain.com/fullchain.pem;
#     ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;
#
#     # ... same location blocks as above ...
# }

server {
    if ($host = ext.makememo.ai) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;
    server_name ext.makememo.ai;
    return 404; # managed by Certbot


}